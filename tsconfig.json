{
	"compilerOptions": {
		"target": "es2020",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"strictNullChecks": true,
		"baseUrl": ".",
		"noUncheckedIndexedAccess": true,
		"paths": {
			"~/*": ["./*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": ["**/*.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/[productSlug]/strategy/kickoff/page.js", "app/[productSlug]/strategy/kickoff/page.jsx", "app/[productSlug]/userbase/journeys/head.jsx"],
	"exclude": ["node_modules"],
	"types": ["node"]
}
